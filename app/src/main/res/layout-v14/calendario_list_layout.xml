<?xml version="1.0" encoding="utf-8"?>
 <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingTop="2dp"
    android:layout_marginTop="2dp"
    app:cardElevation="1dp"
    app:cardMaxElevation="0dp">
<LinearLayout
    android:paddingTop="10dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <TextView android:id="@+id/title_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nombre paciente:"
            android:textSize="19dp"
            android:paddingLeft="15dp"
            android:paddingBottom="10dp"/>
        <TextView android:id="@+id/nombre"
            android:textSize="19dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nombre:"
            android:layout_toRightOf="@id/title_nombre"
            android:layout_alignTop="@id/title_nombre"
            android:paddingLeft="15dp"
            android:textStyle="bold"/>

        <TextView
            android:textSize="19dp"
            android:id="@+id/title_tipo_alerta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de Alerta: "
            android:layout_below="@id/title_nombre"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingLeft="15dp"
           />
        <TextView
            android:textSize="19dp"
            android:id="@+id/txt_tipo_alerta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_toRightOf="@id/title_tipo_alerta"
            android:layout_alignTop="@id/title_tipo_alerta"
            android:textStyle="bold"
            android:paddingLeft="15dp"/>
    </RelativeLayout>


</LinearLayout>
</android.support.v7.widget.CardView>

