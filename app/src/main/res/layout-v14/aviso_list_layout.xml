<?xml version="1.0" encoding="utf-8"?>
 <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="150dp"
    app:cardElevation="5dp" android:layout_margin="7dp"
    app:cardCornerRadius="6dp"
    app:contentPadding="25dp"
    app:cardMaxElevation="6dp">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <TextView android:id="@+id/title_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nombre paciente:"
            android:paddingLeft="15dp"/>
        <TextView android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nombre:"
            android:layout_toRightOf="@id/title_nombre"
            android:layout_alignTop="@id/title_nombre"
            android:paddingLeft="15dp"/>

        <TextView
            android:id="@+id/title_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha Ãºltimo registro: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/title_nombre"
            android:paddingLeft="15dp"/>
        <TextView
            android:id="@+id/txt_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_toRightOf="@id/title_fecha"
            android:layout_alignTop="@id/title_fecha"
            android:textStyle="bold"
            android:paddingLeft="15dp"/>

        <TextView
            android:id="@+id/title_peso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peso actual: "
            android:layout_toRightOf="@id/txt_fecha"
            android:layout_alignTop="@+id/txt_fecha"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingLeft="15dp"
            />
        <TextView
            android:id="@+id/txt_peso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xKG"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_toRightOf="@id/title_peso"
            android:layout_alignTop="@id/title_peso"
            android:textStyle="bold"
            android:paddingLeft="15dp"/>

        <TextView
            android:id="@+id/title_fecha_alerta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de alerta: "
            android:layout_below="@id/title_fecha"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingLeft="15dp"
           />
        <TextView
            android:id="@+id/txt_fecha_alerta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_toRightOf="@id/title_fecha_alerta"
            android:layout_alignTop="@id/title_fecha_alerta"
            android:textStyle="bold"
            android:paddingLeft="15dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="Eliminar alerta"/>


    </RelativeLayout>
</LinearLayout>
</android.support.v7.widget.CardView>

